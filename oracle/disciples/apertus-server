#!/usr/bin/env python2.7
# -*- encoding: utf-8 -*-

from __future__ import print_function

import sys, os
import argparse

sys.path.insert(0, os.path.join(os.path.dirname(__file__), "../lib/python"))

import apertus.conf

parser = argparse.ArgumentParser(description="Apertus launcher")

parser.add_argument(
    '--port', type = int, default = apertus.conf.PORT
)

parser.add_argument(
    '--runtime-dir', type = str, default = ""
)

parser.add_argument(
    '--spawn-db', action = "store_true",
)

parser.add_argument(
    '--proxy', action = "store_true",
)

parser.add_argument(
    '--mongo-host', type = str
)

parser.add_argument(
    '--mongo-port', type = int
)

from apertus.application import Application

if __name__ == '__main__':
    args = parser.parse_args()
    import pymongo
    try:
        mongo_client = pymongo.MongoClient(host = args.mongo_host,
                                           port = args.mongo_port)
    except AttributeError:
        mongo_client = pymongo.Connection(args.mongo_host, args.mongo_port)

    assert mongo_client is not None

    application = Application(
        port = args.port,
        runtime_dir = args.runtime_dir,
        mongo = mongo_client,
        proxy = args.proxy,
    )
    application.run()
