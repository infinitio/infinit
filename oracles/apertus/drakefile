import drake
import drake.cxx
import sys

client = None
server = None

build = None
check = None
install = None

def configure(elle,
              reactor,
              protocol,
              meta_client,
              boost = None,
              python3 = None,
              enable_python_bindings = True,
              prefix = drake.Path('/usr/local'),
              cxx_toolkit = None,
              cxx_config = None):

  global client, server
  global build, check, install

  cxx_config = drake.cxx.Config(cxx_config)

  server = drake.include('server',
                         elle = elle,
                         protocol = protocol,
                         reactor = reactor,
                         meta_client = meta_client,
                         boost = boost,
                         python3 = python3,
                         prefix = prefix,
                         python3 = python3,
                         enable_python_bindings = enable_python_bindings,
                         cxx_toolkit = cxx_toolkit,
                         cxx_config = cxx_config)

  for name in ('build', 'tests', 'check', 'install'):
    globals()[name] = drake.Rule(name)
    globals()[name] << getattr(server, name)
