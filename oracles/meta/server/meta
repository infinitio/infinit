#!/usr/bin/env python3
# -*- python -*-

import os
import sys

import bottle
import infinit.oracles.meta
import elle.log

system_logger = os.getenv("META_LOG_SYSTEM")
if system_logger is not None:
  elle.log.set_logger(elle.log.SysLogger(system_logger))

bottle.run(app = infinit.oracles.meta.Meta(),
           host = '127.0.0.1')
