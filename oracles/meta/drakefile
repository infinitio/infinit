import drake
import drake.cxx
import drake.cxx.boost

client = None
server = None

build = None
check = None
install = None

def configure(elle,
              reactor,
              papier_python,
              transaction_python,
              transaction_lib,
              boost = None,
              python3 = None,
              prefix = drake.Path('/usr/local'),
              cxx_toolkit = None,
              cxx_config = None):

  global client, server
  global build, check, install

  client = drake.include('client',
                         elle = elle,
                         reactor = reactor,
                         python3 = python3,
                         transaction_lib = transaction_lib,
                         boost = boost,
                         prefix = prefix,
                         cxx_toolkit = cxx_toolkit,
                         cxx_config = cxx_config)

  server = drake.include('server',
                         transaction_python = transaction_python,
                         papier_python = papier_python,
                         prefix = prefix,
                         python_version = 3)

  for name in ('build', 'check', 'install'):
    globals()[name] = drake.Rule(name)
    globals()[name] << getattr(client, name)
    globals()[name] << getattr(server, name)
