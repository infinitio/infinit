import drake
import drake.cxx
import drake.cxx.boost

server = None

build = None
check = None
install = None

def configure(elle,
              reactor,
              json_spirit_lib,
              json_spirit_config,
              python_common,
              meta_client,
              transaction_lib,
              boost = None,
              python3 = None,
              enable_python_bindings = True,
              prefix = drake.Path('/usr/local'),
              cxx_toolkit = None,
              cxx_config = None,
              valgrind = None):

  global client, server
  global build, check, install

  server = drake.include('server',
                         elle = elle,
                         reactor = reactor,
                         json_spirit_lib = json_spirit_lib,
                         json_spirit_config = json_spirit_config,
                         meta_client = meta_client,
                         boost = boost,
                         python3 = python3,
                         enable_python_bindings = enable_python_bindings,
                         prefix = prefix,
                         cxx_toolkit = cxx_toolkit,
                         cxx_config = cxx_config,
                         valgrind = valgrind,
  )

  client = drake.include('client',
                         elle = elle,
                         reactor = reactor,
                         python_common = python_common,
                         transaction_lib = transaction_lib,
                         boost = boost,
                         prefix = prefix,
                         cxx_toolkit = cxx_toolkit,
                         cxx_config = cxx_config)

  for name in ('build', 'check', 'install'):
    globals()[name] = drake.Rule(name)
    globals()[name] << getattr(server, name)
