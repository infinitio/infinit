import drake
import drake.cxx
import drake.cxx.boost

server = None

build = None
check = None
install = None

def configure(elle,
              python_common,
              meta_client,
              transaction_lib,
              boost = None,
              python_config = None,
              python_lib = None,
              prefix = drake.Path('/usr/local'),
              cxx_toolkit = None,
              cxx_config = None,
              valgrind = None):

  global client, server
  global build, check, install

  server = drake.include('server',
                         elle = elle,
                         meta_client = meta_client,
                         boost = boost,
                         python_config = python_config,
                         python_lib = python_lib,
                         prefix = prefix,
                         cxx_toolkit = cxx_toolkit,
                         cxx_config = cxx_config,
                         valgrind = valgrind,
  )

  client = drake.include('client',
                         elle = elle,
                         python_common = python_common,
                         transaction_lib = transaction_lib,
                         boost = boost,
                         prefix = prefix,
                         cxx_toolkit = cxx_toolkit,
                         cxx_config = cxx_config,
                         valgrind = valgrind,
  )

  for name in ('build', 'check', 'install'):
    globals()[name] = drake.Rule(name)
    globals()[name] << getattr(server, name)
    globals()[name] << getattr(client, name)
